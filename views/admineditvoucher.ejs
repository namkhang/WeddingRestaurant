                    <label class="col-3 name">Mã Voucher</label>
                    <input class="col-9 tenNH" type="text" name="VoucherCode" value="<%-voucher.VoucherCode%>">
                  </div>
                </div>
                <div class="col-12 nhaHang">
                    <div class="row">
                      <label class="col-3 name">Phần trăm được giảm</label>
                      <input class="col-9 tenNH" type="text" name="Reduction" value="<%-voucher.Reduction%>">
                    </div>
                  </div>
                <div class="col-12 nhaHang">
                  <div class="row">
                    <label class="col-3 name">Ngày tạo</label>
                    <input class="col-9 tenNH" type="text" name="TimeStart" value="<%-voucher.TimeStart%>">
                  </div>
                </div>
                <div class="col-12 nhaHang">
                    <div class="row">
                      <label class="col-3 name">Ngày hết hạn</label>
                      <input class="col-9 tenNH" type="text" name="TimeEnd" value="<%-voucher.TimeEnd%>">
                    </div>
                  </div>
                  <div class="col-12 nhaHang">
                    <div class="row">
                      <label class="col-3 name">Trạng thái voucher</label>
                      <input class="col-9 tenNH" type="text" name="StatusVoucher" value="<%-voucher.StatusVoucher%>">
                    </div>
                  </div>
               
              </div>
              <!-- upload img -->
            </div>
            <!-- dang and caapj nhaapj -->
            <div class="col-12 text-center">
                <input type="text" name="idvoucher"  value="<%-voucher._id%>" style="display: none;">
              <input class="datcho" type="submit" value="Chỉnh sửa">
            </div>
          </div>
      </form>

