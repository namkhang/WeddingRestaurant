    <!-- main-start-->

        <form action="/admin/edit-news" method="POST"  enctype="multipart/form-data" style="display:flex; align-items: center;justify-content: space-between;">
          <div class="container">
            <div class="row">
              <div class="col-6 offset-3 content-NH">
                <h2 class="col-12 text-center">Chỉnh sửa tin tức</h2>


                <div class="col-12 nhaHang">
                  <div class="row">
                    <label class="col-3 name">Tiêu đề</label>
                    <input class="col-9 tenNH" type="text" name="title" value="<%-news.title%>"
                      placeholder="title">
                  </div>
                </div>
                <div class="col-12 nhaHang">
                  <div class="row">
                    <label class="col-3 name">Loại tin tức</label>
                    <input class="col-9 tenNH" type="text" name="type" value="<%-news.type%>"
                      placeholder="type">
                  </div>
                </div>
                <div class="col-12 nhaHang">
                    <div class="row">
                      <label class="col-3 name">Thời gian</label>
                      <input class="col-9 tenNH" type="text" name="time" value="<%-news.time%>"
                        placeholder="time">
                    </div>
                  </div>
                <div class="col-12 nhaHang">
                  <div class="row">
                    <label class="col-3 name">Nội dung tin tức</label>
                    <input class="col-9 tenNH" type="text" name="Content" value="<%-news.Content%>"
                      placeholder="Content">
                  </div>
                </div>
                <div class="col-12 nhaHang">
                  <div class="row">
                    <label class="col-3 name">Upload</label>
                    <input type="file" name="image">
                  </div>
                </div>
               
              </div>
              <!-- upload img -->
            </div>
            <!-- dang and caapj nhaapj -->
            <div class="col-12 text-center">
                <input type="text" name="idnews"  value="<%-news._id%>" style="display: none;">
              <input class="datcho" type="submit" value="Chỉnh sửa">
            </div>
          </div>
          <div class="container__img">
            <img src="<%-news.image%>" alt="" style="position: relative;right: 70px;border-radius:50%;width: 300px;height: 300px;margin-right: 36px;">
          </div>
      </form>

        <!-- main-end -->
